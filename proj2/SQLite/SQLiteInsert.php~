<?php

namespace App;

//use App\SQLiteConnection as SQLiteConnection;

class SQLiteInsert{
    
    private $pdo;
        
    public function __construct($pdo){
        $this->pdo = $pdo;
    }

/**
    public function insertCol($col, $val){
        $query = "INSERT INTO courses($col) VALUES($val)";
        echo gettype($this->pdo), "\n";
      
        $stmt = $this->pdo->prepare($query);
      
        var_dump($stmt);
        $stmt->bindValue(":$col", $val);
        var_dump($stmt->execute());
       

        var_dump( $this->pdo->exec($query));

    }
 */

    public function insertCourses($Department, $Subject, $Bulletin_Prefix, 
        $Course_Number, $Name, $Min_Points, $Max_Points){

            $query = "INSERT INTO courses(
                Department, Subject, Bulletin_Prefix, 
                Course_Number, Name, Min_Points, Max_Points) ". "VALUES(
                    :Department, :Subject, :Bulletin_Prefix, 
                    :Course_Number, :Name, :Min_Points, :Max_Points);";

            $stmt = $this->pdo->prepare($query);
           // echo "testing inside SQLiteInsert \n";
           
            $result = $stmt->execute(array(
                ':Department'=> $Department,
                ':Subject'=> $Subject,
                ':Bulletin_Prefix'=> $Bulletin_Prefix,
                ':Course_Number'=> $Course_Number,
                ':Name'=> $Name,
                ':Min_Points'=> $Min_Points,
                ':Max_Points'=> $Max_Points
            ));
           // var_dump($result);

        }
    
  }
?>
